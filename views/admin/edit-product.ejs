<%- include('../includes/start.ejs') %>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>
  <body>
    <%- include('../includes/header.ejs') %>
    <main>
      <form class="product-form" action="/admin/<% if (editing) {%>edit-product?idToUpdate=<%=prod._id%> <%} else {%>add-product<%}%>" method="POST">
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value="<%= prod ? prod.title : '' %>" />
        </div>
        <div class="form-control">
          <label for="imageUrl">Image URL</label>
          <input type="text" name="imageUrl" id="imageUrl" value="<%= prod ? prod.imageUrl : '' %>" />
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input type="number" name="price" id="price" step="0.01" value="<%= prod ? prod.price : '' %>" />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea  name="description" id="description" rows="5"><%= prod ? prod.description : '' %></textarea>
        </div>
        <button class="btn" type="submit"><%= editing ? 'Edit Product' : 'Add Product' %></button>
      </form>
    </main>
<%- include('../includes/end.ejs') %>
